<body style="background-color: rgb(196, 227, 248);">
    <div class="containerbet text-center">
        <div class="card">        
            <div class="row g-0">
                
                <div class="col-md-5 card rounded-start bg-offer">
                    <!--<div class="panda">
                        <img src="../images/panda.png" alt="Panda" width="120%">
                    </div>-->
                    <a href="/register" class="reg">
                        Registrar cuenta
                    </a>
                </div>
                <div class="col-md-7 card-body">

                    <div class="container py-5" style="padding: 25px;">
                        <h1> { MyHouse }</h1> <br>
                        <form action="/" method="POST">
                        <input type="text" class="form-control text-center" name="email" id="email" placeholder="Ingrese su email" onchange="toggleButton()"><br>
                        
                        <input type="password" class="form-control text-center" name="password" id="password" placeholder="Ingrese su contraseña" onchange="toggleButton()">
                        <br>

                        <button type="submit" class="btn btn-primary w-100 roun" name="checkbutton" id="checkButton" disabled> Iniciar</button>
                        </form>
                        <br>
                    </div>
                    
                </div>
            </div>        
        </div>

        {{#if message}}
            <div class="alert {{messageClass}}" style="height:35px; padding-top:3px; padding-bottom:0px; margin:15px;">
                <p style="text-align: center;">{{message}}</p>
            </div>
        {{/if}}

    </div>
</body>


<!-- Estilos -->
<style>
    @font-face {
        font-family: myhouse;
        src: url('../aAlleyGarden.ttf');
    }


    .containerbet h1 {
        color: rgb(226, 117, 14);
        font-size: 46px;
        font-family: myhouse;
    }
    
    .containerbet {
        position: absolute;
        width: 50%;
        height: auto;
        left: 50%;
        top: 50%;
        /*background: rgb(70, 8, 151);*/
        transform: translateX(-50%) translateY(-50%);
        
    }
    
    
    .containerbet a:hover {
        color: rgb(207, 239, 253);
    }

    .roun{
        border-radius: 50px;
        font-weight: bold;
    }

    .bg-offer {
        background: linear-gradient(rgba(17, 57, 117, 0.7), rgba(18, 130, 145, 0.4)), url(../images/sala1.jpg) center center no-repeat;
        background-size: cover;
        min-height: 55px;
    }

    .reg{
        color: rgb(255, 255, 255);
        position: absolute;
        padding-bottom: 25px;
        bottom: 0;
        left:0;
        right:0;
        font-weight: bold;
        text-decoration: none;
    }

    .panda{
        position: absolute;
        left: 45%;
        top: 50%;
        transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
    }
</style>

<!-- Validación base -->

<script>        
    function toggleButton()
        {            
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value;
 
            if (email && password) {
                document.getElementById('checkButton').disabled = false;
            } else {
                document.getElementById('checkButton').disabled = true;
            }
    }
</script>